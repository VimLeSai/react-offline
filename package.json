{
  "name": "react-offline",
  "version": "0.1.0",
  "description": "React component that notifies when browser is either offline or online.",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.umd.js",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": "https://github.com/dashed/react-offline",
  "author": {
    "name": "Alberto Leal",
    "email": "mailforalberto@gmail.com",
    "url": "github.com/dashed"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "eslint": "^4.6.1",
    "eslint-plugin-react": "^7.3.0",
    "microbundle": "^0.11.0",
    "prettier": "^1.6.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "scripts": {
    "pretty": "prettier --write --tab-width 4 'src/**/*.js' 'test/**/*.js'",
    "lint": "eslint src test",
    "build": "microbundle --no-compress --external=all --sourcemap=false",
    "dev": "microbundle watch --no-compress  --external=all --sourcemap=false",
    "test": "nwb test-react",
    "travis": "npm run lint && npm run test",
    "prepublish": "npm run lint && npm run test && npm run build"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "0.12"
          }
        }
      ]
    ]
  },
  "keywords": [
    "react",
    "offline",
    "react-offline",
    "online"
  ],
  "dependencies": {
    "prop-types": "^15.5.10"
  }
}
